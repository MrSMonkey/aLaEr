<!-- 商城首页 -->
<shopping-layout class="merchant-layout">
  <view class="header-wrap">
    <banner banner-list="{{[merchantImg]}}"/>
  </view>
  <view class="merchant-info-wrap">
    <view class="merchant-info-title">
      <view class="merchant-name">{{merchantName}}</view>
      <view class="ship-guide" bind:tap="clickSendIntroduceHandler">
        <view>配送说明，新人必看 <van-icon name="play" size="24rpx" /></view>
      </view>
    </view>
    <view class="merchant-info-others">
      <view class="address">地址：{{merchantAddress}}</view>
      <view class="telphone">服务电话：{{merchantTel}}</view>
    </view>
  </view>
  <!-- <view class="search-wrap">
    <input class="weui-input" placeholder="占位符字体是红色的" />
  </view> -->
  <view class="layout-css goods-wrap {{activeKey === activeKeyArr[0] ? '' : 'hide'}}">
    <view class="goods-menu-wrap">
      <van-sidebar active-key="{{ activeKey }}" bind:change="clickMenuItemHandler" custom-class="goods-menu">
        <van-sidebar-item wx:for="{{menuList}}" wx:key="id" data-menu-id="{{item.id}}" title="{{item.title}}" />
      </van-sidebar>
    </view>
    <view class="goods-list-wrap">
      <good-card
        wx:for="{{goodsList}}"
        wx:key="id"
        dataSource="{{item}}"
        bind:onAddTap="onAddTap"
        bind:onSubTap="onSubTap"
        data-id="{{item.id}}"
      />
    </view>
  </view>
  <van-dialog
    use-slot
    show="{{ isshowTip }}"
  >
    <view class="send-introduce-wrap">
