.fx-c {
  display: flex;
  flex-direction: column;
}
.fx-r-sb {
  display: flex;
  justify-content: space-between;
}
.fx-r-sb {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.hide {
  display: none !important;
}
.send-tip-wrap {
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  color: #3F3F3F;
}
.main {
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}
.main .tabs-bar {
  color: #3F3F3F;
  display: flex;
  justify-content: space-between;
}
.main .tabs-bar .tab-btn {
  border: 1px solid #E5E5E5;
  border-width: 1px 0;
  height: 68rpx;
  line-height: 68rpx;
  flex: 1;
  text-align: center;
  color: #3F3F3F;
}
.main .tabs-bar .active-tab {
  border-color: #E73823;
  background: #E73823;
  color: #fff;
}
.main .tabs-content {
  flex: 1;
  overflow: hidden;
}
.main .tabs-content .tab-content {
  height: 100%;
  overflow: hidden;
}
.main .tabs-content .goods-wrap {
  display: flex;
  justify-content: space-between;
}
.main .tabs-content .goods-wrap .goods-menu-wrap {
  overflow-x: hidden;
  overflow-y: scroll;
  --sidebar-selected-border-color: #fff;
}
.main .tabs-content .goods-wrap .goods-menu-wrap .van-sidebar {
  width: 180rpx;
  height: 100%;
  background: #F5F5F5;
}
.main .tabs-content .goods-wrap .goods-menu-wrap .van-sidebar .van-sidebar-item {
  padding: 14rpx 0 14rpx 20rpx;
}
.main .tabs-content .goods-wrap .goods-menu-wrap .van-sidebar .van-sidebar-item {
  padding: 14rpx 0 14rpx 20rpx;
  background: transparent;
}
.main .tabs-content .goods-wrap .goods-menu-wrap .van-sidebar .van-sidebar-item--selected {
  padding-top: 7px;
  padding-bottom: 7px;
  color: #E73823;
  background: #fff;
}
.main .tabs-content .goods-wrap .goods-list-wrap {
  flex: 1;
  overflow-y: scroll;
}
